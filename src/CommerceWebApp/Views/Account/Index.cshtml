@model IEnumerable<Commerce_WebApp.Models.Financial_Transaction>

@{
    ViewData["Title"] = "Account";
}
<style type="text/css">
    /* table */
    .tg {
        border-collapse: separate;
        border-spacing: 0;
    }

        .tg td {
            border-bottom: 3px solid #007AA3;
            border-right: 3px solid #007AA3;
            font-family: Arial, sans-serif;
            font-size: 14px;
            overflow: hidden;
            padding: 14px 20px;
            word-break: normal;
            background-color: #faf9f7;
        }

        .tg th {
            border-top: 3px solid #006747;
            border-bottom: 3px solid #006747;
            border-right: 3px solid #006747;
            font-family: Arial, sans-serif;
            font-size: 14px;
            font-weight: 550;
            overflow: hidden;
            padding: 14px 20px;
            word-break: normal;
        }

        .tg .tg-ul38 {
            position: -webkit-sticky;
            position: sticky;
            text-align: left;
            top: -1px;
            vertical-align: top;
            will-change: transform
        }

        .tg .tg-j1i3 {
            position: -webkit-sticky;
            position: sticky;
            text-align: left;
            top: 0px;
            vertical-align: top;
            will-change: transform;
            background-color: #4FA800;
        }

        /* apply left border for th */
        .tg th:first-child {
            border-left: 3px solid #006747;
        }

        /* apply left border for td */
        .tg td:first-child {
            border-left: 3px solid #007AA3;
        }

        /* table alphanumeric item */
        .tg .tg-0pky {
            text-align: left;
            vertical-align: top
        }

        /* insert dollar sign before money items */
        .tg .tg-money:before {
            content: '$';
        }

        /* table money item */
        .tg .tg-money {
            text-align: right;
            vertical-align: top
        }

        /* table money header */
        .tg .moneyHeader {
            text-align: right;
        }

        .tg .tg-0lax {
            text-align: left;
            vertical-align: top
        }

    .tg-sort-header::-moz-selection {
        background: 0 0
    }

    .tg-sort-header::selection {
        background: 0 0
    }

    .tg-sort-header {
        cursor: pointer
    }

        .tg-sort-header:after {
            content: '';
            float: right;
            margin-top: 7px;
            border-width: 0 5px 5px;
            border-style: solid;
            border-color: #404040 transparent;
            visibility: hidden
        }

        .tg-sort-header:hover:after {
            visibility: visible
        }

    .tg-sort-asc:after, .tg-sort-asc:hover:after, .tg-sort-desc:after {
        visibility: visible;
        opacity: .4
    }

    .tg-sort-desc:after {
        border-bottom: none;
        border-width: 5px 5px 0
    }
</style>
<table id="tg-hh5Z3" class="tg" width="100%">
    <thead>
        <tr>
            <th class="tg-j1i3">Date and Time</th>
            <th class="tg-j1i3">Transaction Description</th>
            <th class="tg-j1i3">Type</th>
            <th class="tg-j1i3 moneyHeader">Amount</th>
            <th class="tg-j1i3 moneyHeader">Balance</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td class="tg-0pky">
            @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td class="tg-0pky">
            @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="tg-0pky">
            @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="tg-money">
            @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td class="tg-money">
            @Html.DisplayFor(modelItem => item.Balance_After)
            </td>
        </tr>
    }
    </tbody>
</table>
